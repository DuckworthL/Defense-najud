{
    "version": 2,
    "functions": {
      "api/*.php": {
        "runtime": "vercel-php@0.6.0"
      }
    },
    "routes": [
      { "src": "/(css|js|images|fonts|favicon.ico)/(.*)", "dest": "/public/$1/$2" },
      { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "false",
      "APP_URL": "https://defense-najud.vercel.app",
      "ASSET_URL": "https://defense-najud.vercel.app"
    }
  }